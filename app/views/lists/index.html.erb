
<div class="banner d-flex align-items-center justify-content-center">
<h1> Save any kind of movies </h1>
</div>

<div class="container">
  <h1 class="mt-3"> My list</h1>

</div>
<div class="container ">
  <%= link_to "Create a movie list", "#", class:"btn btn-success" %>
</div>

<div class="container mt-3">
  <div class="cards">
      <% @lists.each do |list| %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"> <%= link_to list.name.upcase, list_path(list) %></h5>
          </div>
        </div>
      <% end %>
  </div>
</div>
